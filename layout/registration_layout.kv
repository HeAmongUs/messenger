
<RegistrationLayout>:
    notification: notification
    login_input: login_input
    password1_input: password1_input
    password2_input: password2_input

    orientation: "vertical"
    padding: [30, 20, 30, 150]

    MDBoxLayout:
        padding: [50, 0, 40, 20]
        orientation: "vertical"
        MDLabel:
            text: "Registration form"

        MDLabel:
            id: notification

    MDBoxLayout:
        padding: [40, 0, 40, 20]
        orientation: "vertical"
        spacing: 15
        MDTextFieldRound:
            mode: "rectangle"
            id: login_input
            icon_left: "account"
            color_active: app.theme_cls.primary_light
            hint_text: "Login (4-15)"
            helper_text_mode: "on_error"
            max_text_length: 5

        ClickableTextFieldRound:
            id: password1_input
            icon_left: 'key-variant'
            icon_right: 'eye-off'
            hint_text: 'Enter password'


        MDTextFieldRound:
            id: password2_input
            icon_left: 'key-variant'
            color_active: app.theme_cls.primary_light
            password: True
            hint_text: 'Repeat password'

        MDRectangleFlatIconButton:
            icon: "database-plus"
            theme_text_color: "Custom"
            text_color: app.theme_cls.primary_color
            text: "Sign-up"
            pos_hint: {"center_x": .5, "center_y": .5}

            on_release:
                root.user_registration()


<LoginLayout>:
    notification: notification
    login_input: login_input
    password_input: password_input

    rows: 2
    padding: [30, 40, 30, 150]
    spacing: 0

    MDBoxLayout:
        padding: [50, 0, 40, 20]
        orientation: "vertical"

        MDLabel:
            size_hint: 1, 0.3
            text: "Sign-in form"

        MDLabel:
            id: notification


    MDBoxLayout:
        padding: [40, 0, 40, 20]
        orientation: "vertical"
        spacing: 15

        MDTextFieldRound:
            id: login_input
            icon_left: "account"
            color_active: app.theme_cls.primary_light
            hint_text: "Login"
            helper_text_mode: "on_focus"
            helper_text: "length 4-15"
            max_text_length: 15
            min_text_length: 4

        ClickableTextFieldRound:
            id: password_input
            icon_left: 'key-variant'
            icon_right: 'eye-off'
            hint_text: 'Password'

        MDRectangleFlatIconButton:
            icon: "login"
            theme_text_color: "Custom"
            text_color: app.theme_cls.primary_color
            text: "Sign-in"
            pos_hint: {"center_x": .5, "center_y": .5}

            on_release:
                root.user_login()
